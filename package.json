{
    "name": "journali-frontend",
    "version": "1.0.0",
    "repository": "git@github.com:wesleyklop/journali-frontend.git",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build:dev": "webpack --mode=development --progress --hide-modules",
        "watch:dev": "yarn build:dev --watch",
        "build:prod": "webpack --mode=production --no-progress --hide-modules",
        "watch:prod": "yarn build:prod --watch",
        "lint:fix": "yarn eslint --fix && yarn prettier --write",
        "lint:check": "yarn eslint && yarn prettier --check",
        "serve:dev": "webpack-dev-server",
        "eslint": "eslint --ext .js,.vue app __tests__",
        "prettier": "prettier \"app/**/*.css\" \"*.{json,yml,md,js}\" \".github/**/*.yml\"",
        "test": "jest"
    },
    "dependencies": {
        "@babel/runtime": "^7.9.2",
        "tailwindcss": "^1.2.0",
        "vue": "^2.6.11",
        "vue-router": "^3.1.6",
        "vuex": "^3.1.3"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@fullhuman/postcss-purgecss": "^2.1.2",
        "@vue/test-utils": "^1.0.0-beta.33",
        "babel-core": "^7.0.0-bridge",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^25.3.0",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.5.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-vue": "^7.0.0-alpha.0",
        "html-webpack-plugin": "^4.2.0",
        "jest": "^25.3.0",
        "mini-css-extract-plugin": "^0.9.0",
        "postcss-loader": "^3.0.0",
        "prettier": "^2.0.4",
        "vue-jest": "^3.0.5",
        "vue-loader": "^15.9.1",
        "vue-template-compiler": "^2.6.11",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    }
}
